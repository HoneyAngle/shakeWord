/* pages/upload/upload.wxss */
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height:100%;
}
camera{
  width:100%;
  height:100%;
  position: relative;
}
.box{
  width:100%;
  position:absolute;
  bottom:10rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;

}
.box .play{
  width:60rpx;
  height:60rpx;
  z-index: 99;
  align-self: center;
}
.progress{
  width: 100%;
  z-index: 99;
}
.img{
  width:100rpx;
  height:100rpx;
  border: 1px solid red;
  border-radius:20rpx;
  display: flex;
  justify-content: center;
  margin: 0 auto;
}
.dui{
  position: absolute;
  bottom:40rpx;
  right:80rpx;
  width: 40rpx;
  height: 40rpx;
  margin-left: 100rpx;
}
.video, video{
  width:100%;
  height: 100%;
}
.btn{
  /* width:100rpx;
  height:60rpx; */
  line-height: 60rpx;
  position: absolute;
  bottom:10rpx;
  right:20rpx;
  font-size:24rpx;
}
.upload{
  width:100%;
  height:100%;
  margin: 20rpx;
  background: #ccc;
}
textarea{
  width:100%;
  height:100rpx;
  margin: 20rpx;
}